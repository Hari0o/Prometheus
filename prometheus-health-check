- job_name: 'my-react-nginx-health-check'
    metrics_path: '/health'  # Change this to your health check endpoint
    kubernetes_sd_configs:
      - role: pod  # Discover Pods in the specified namespace
    relabel_configs:
      - source_labels: [__meta_kubernetes_namespace]
        action: keep
        regex: react-nginx  # Keep only Pods in the 'react-nginx' namespace
      - source_labels: [__meta_kubernetes_pod_name]
        action: replace
        target_label: pod_name  # Label to identify the Pod
      - source_labels: [__meta_kubernetes_service_name]
        action: replace
        target_label: service_name  
